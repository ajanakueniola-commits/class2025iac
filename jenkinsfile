pipeline {
    agent any 

stages {
        stage ('checkout') {
            steps {
                checkout scm
            }
        }
        stage ('packer init .') {
            steps {
                dir ('packer') {
                    sh ' packer init . -reconfigure'
                }
            }
        }

        stage ('packer validate .') {
            steps {
                dir ('packer') {
                    sh ' packer validate .'
                }
            }
        } 

        stage ('packer build .') {
            steps {
                dir ('packer') {
                    sh ' packer build . -auto-approve'
                }
            }
        } 
}


   
