pipeline {
    agent any 
    
    environment {
        
        AWS_SECRET_ACCESS_KEY = credentials ('aws-secret-access-key')
        AWS_ACCESS_KEY_ID = credentials ('aws-access-key-id')
        AWS_DEFAULT_REGION = 'us-east-2'
    }
    
    stages {
        stage ('checkout') {
            steps {
                checkout scm
            }
        }
        stage ('packer init .') {
            steps {
                dir ('packer') {
                    sh ' packer init .'
                }
            }
        }

        stage ('packer validate .') {
            steps {
                dir ('packer') {
                    sh ' packer validate .'
                }
            }
        } 

        stage ('packer build .') {
            steps {
                dir ('packer') {
                    sh ' packer build . -on-error=[cleanup|abort|ask|run-cleanup-provisioner]'
                }
            }
        } 
    
    }
}
