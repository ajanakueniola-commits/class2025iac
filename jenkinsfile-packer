pipeline {
    agent any 


    parameters {
        choice (
            name: 'PK_ACTION',
            choices :['plan','apply', 'destroy'],
            description: 'Select which Terraform action to run'
        )
    }
    
    environment {
        
        AWS_SECRET_ACCESS_KEY = credentials ('aws-secret-access-key')
        AWS_ACCESS_KEY_ID = credentials ('aws-access-key-id')
        AWS_DEFAULT_REGION = 'us-east-2'
    }
    
    stages {
        stage ('checkout') {
            steps {
                checkout scm
            }
        }
        stage ('packer init .') {
            steps {
                dir ('packer') {
                    sh ' packer init . -reconfigure'
                }
            }
        }

        stage ('packer validate .') {
            steps {
                dir ('packer') {
                    sh ' packer validate .'
                }
            }
        } 

        stage ('packer build .') {
         when  {
                expression { params.PK_ACTION == 'build .'}
            }
            steps {
                dir ('packer') {
                    sh ' packer build . -auto-approve'
                }
            }
        } 

        stage ('packer destroy .') {
         when  {
                expression { params.PK_ACTION == 'destroy .'}
            }
            steps {
                dir ('packer') {
                    sh ' packer destroy -auto-approve'
                }
            }
        } 
    
    }
}
